{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Section
{% endblock title %}


{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Modifier section
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{form_start(form)}}
                            <form role="form">

                                <div class="form-group">
                                    <label>Intitul√©</label>
                                    {{ form_widget(form.nomSec , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>


                                {{ form_widget(form.submit, {'attr':{'class':"btn btn-default" }})}}
                                <button type="reset" class="btn btn-default">Annuler</button>
                                {{form_end(form)}}


                            </form>

                        </div>
                        <!-- /.col-lg-6 (nested) -->

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock body %}