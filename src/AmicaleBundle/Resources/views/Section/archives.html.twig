{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Section
{% endblock title %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des sections archivées
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="center">Nom</th>
                                <th class="center">Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for s in sections %}
                                <tr class="odd gradeX">
                                    <td class="center"> {{ s.nomSec }} </td>
                                    <td class="center"> Le {{ s.dateSec |date('d-m-Y')}}  &nbsp; &nbsp;
                                        <a href="{{ path('delete_section', {'id':s.id})}}"
                                           onclick="
                                                    return confirm('Êtes-vous sûr de supprimer cette section ?')

                                            "> <p class="fa fa-trash-o">  </p></a>&nbsp;&nbsp;
                                        <a href="{{ path('update_section', {'id':s.id})}}"> <p class="fa fa-edit">  </p></a>

                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock body %}