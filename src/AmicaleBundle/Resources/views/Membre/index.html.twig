{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Membres
{% endblock title %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des membres
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="center">Nom</th>
                                <th class="center">Prénom</th>
                                <th class="center">Téléphone</th>
                                <th class="center">Profession </th>
                                <th class="center">Rôle</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for m in membres %}
                                <tr class="odd gradeX">
                                    <td class="center"> {{ m.firstName }} </td>
                                    <td class="center"> {{ m.lastName }} </td>
                                    <td class="center"> {{ m.phone }}  </td>
                                    <td class="center"> {{ m.job }} </td>
                                    <td class="center">
                                        {% if m.roles[0]=="ROLE_UTILISATEUR" %}
                                            Utilisateur &nbsp; &nbsp;&nbsp; &nbsp;
                                        {% else %}
                                            Administrateur
                                        {% endif %}
                                    &nbsp; &nbsp;
                                        <a href="{{ path('Delete_Membre', {'id':m.id})}}"
                                           onclick="return confirm('Êtes-vous sûr de supprimer ce membre ?')"> <p class="fa fa-trash-o">  </p></a>&nbsp;&nbsp;
                                        <a href="{{ path('Update_Membre', {'id':m.id})}}"> <p class="fa fa-edit">  </p></a>
                                        &nbsp;
                                        <a href ="{{ path('Detail_Membre', {'id':m.id})}}"> <p class="fa fa-info">  </p></a>
                                        &nbsp;
                                        <a href ="{{ path('Pdf_Membre', {'id':m.id})}}"> <p class="fa fa-file-pdf-o">  </p></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <a href="/Amicale/web/app_dev.php/register"><p class="fa fa-plus"> </p>  Nouveau membre </a>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock body %}