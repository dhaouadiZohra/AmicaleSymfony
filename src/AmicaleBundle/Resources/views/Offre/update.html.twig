{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Offre
{% endblock title %}


{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Modifier offre
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{form_start(form)}}
                            <form role="form">

                                <div class="form-group">
                                    <label>Intitulé</label>
                                    {{ form_widget(form.ofrIntitule , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Nombre de places</label>
                                    {{ form_widget(form.ofrNbrPlaces , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>
                                <div class="form-group">
                                    <label>Agence</label>
                                    {{ form_widget(form.ofrAgence , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Date début</label>
                                    {{ form_widget(form.ofrDateDeb) }}
                                </div>

                                <div class="form-group">
                                    <label>Date fin</label>
                                    {{ form_widget(form.ofrDateFin) }}
                                </div>
                                <div class="form-group">
                                    <label>Heure debut</label>
                                    {{ form_widget(form.ofrHeureDeb) }}
                                </div>
                                <div class="form-group">
                                    <label>Heure fin</label>
                                    {{ form_widget(form.ofrHeureFin) }}
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    {{ form_widget(form.ofrDescription , { 'attr': {'class': "form-control",
                                        'rows':"3"} }) }}
                                </div>
                                {{ form_widget(form.Valider, {'attr':{'class':"btn btn-default" }})}}
                                <button type="reset" class="btn btn-default">Annuler</button>
                                {{form_end(form)}}


                            </form>

                        </div>
                        <!-- /.col-lg-6 (nested) -->

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock body %}