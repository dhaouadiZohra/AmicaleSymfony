{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Resevation
{% endblock title %}


{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Nouvelle Reservation
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{form_start(form)}}
                            <form role="form">

                                <div class="form-group">
                                    <label>Intitulé</label>
                                    {{ form_widget(form.resIntitule , { 'attr': {'class': "form-control",
                                        'placeholder': "Intitulé"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Lieu</label>
                                    {{ form_widget(form.resLieu , { 'attr': {'class': "form-control",
                                        'placeholder': "Lieu"} }) }}
                                </div>
                                <div class="form-group">
                                    <label>Nombre des participants</label>
                                    {{ form_widget(form.resNbrPersonnes , { 'attr': {'class': "form-control",
                                        'placeholder': "Nombre des participants"} }) }}
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    {{ form_widget(form.resDescription , { 'attr': {'class': "form-control",
                                        'rows':"3"} }) }}
                                </div>
                                <div class="form-group">
                                    <label>Offres</label>
                                    {{ form_widget(form.resOfrId , { 'attr': {'class': "form-control"} }) }}
                                </div>

                                {{ form_widget(form.Valider, {'attr':{'class':"btn btn-default" }})}}
                                <button type="reset" class="btn btn-default">Annuler</button>
                                {{form_end(form)}}


                            </form>

                        </div>
                        <!-- /.col-lg-6 (nested) -->

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock body %}