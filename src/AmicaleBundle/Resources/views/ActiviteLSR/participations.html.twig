{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Participations
{% endblock title %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des participations
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="center">Membre</th>
                                <th class="center">Activité</th>
                                <th class="center">Date de participation</th>

                            </tr>
                            </thead>
                            <tbody>

                            {% for prt in participations %}


                    {% if prt.prtMbrId==1 %}
                                    <tr class="odd gradeX">
                                        <td class="center"> Ahmed </td>

                                        <td class="center"> {% for act in activites %}
                        {% if act.actId == prt.prtActId %}
                            {{ act.actIntitule }}
                            {% endif %}
                                            {% endfor %}</td>
                                        <td class="center"> Le {{ prt.prtHeure |date('d-m-Y H:i')}} &nbsp; </td>
                                        <td><a href="{{ path('Delete_ActiviteLSR', {'id':prt.prtId})}}"
                                               onclick="
                                                   return confirm('Êtes-vous sûr de supprimer cette participation?')

                                                   "> </a></td>
                                    </tr>
        {% endif %}
                                {% if prt.prtMbrId==2 %}

                                    <tr class="odd gradeX">
                                        <td class="center"> Maroua </td>

                                        <td class="center"> {% for act in activites %}
                                                {% if act.actId == prt.prtActId %}
                                                    {{ act.actIntitule }}
                                                {% endif %}
                                            {% endfor %}</td>
                                        <td class="center"> Le {{ prt.prtHeure |date('d-m-Y H:i')}} &nbsp; </td>
                                        <td><a href="{{ path('Delete_ActiviteLSR', {'id':prt.prtId})}}"
                                               onclick="
                                                   return confirm('Êtes-vous sûr de supprimer cette participation?')

                                                   "> </a></td>
                                    </tr>
                                {% endif %}
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <a href="/Amicale/web/app_dev.php/statistiques"><p class="fa fa-bar-chart-o"> </p>  Statistiques de participation</a>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock body %}