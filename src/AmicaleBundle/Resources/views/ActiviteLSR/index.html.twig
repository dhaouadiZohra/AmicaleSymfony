{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Activité de loisir
{% endblock title %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des activités de loisir
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="center">Intitulé</th>
                                <th class="center">Lieu</th>
                                <th class="center">Prix</th>
                                <th class="center">Début</th>
                                <th class="center">Fin </th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for act in activites %}
                                {% if act.actType == "loisir"  %}
                                <tr class="odd gradeX">
                                    <td class="center"> {{ act.actIntitule }} </td>
                                    <td class="center"> {{ act.actLieu }} </td>
                                    <td class="center"> {{ act.actLsrPrix }} </td>
                                    <td class="center"> Le {{ act.actDateDeb |date('d-m-Y')}} à {{act.actHeureDeb |date('H:i')}}  </td>
                                    <td class="center"> Le {{ act.actDateFin |date('d-m-Y')}} à {{act.actHeureFin|date('H:i')}}&nbsp; &nbsp;


                                    </td>
                                    <td><a href="{{ path('Delete_ActiviteLSR', {'id':act.actId})}}"
                                           onclick="
                                                   return confirm('Êtes-vous sûr de supprimer cette activite?')

                                                   "> <p class="fa fa-trash-o">  </p></a>&nbsp;&nbsp;<a href="{{ path('Update_ActiviteLSR', {'id':act.actId})}}"> <p class="fa fa-edit">  </p></a></td>
                                </tr>
                                    {%  endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <a href="/Amicale/web/app_dev.php/CreateActiviteLSR"><p class="fa fa-plus"> </p>  Nouvelle activité </a>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock body %}