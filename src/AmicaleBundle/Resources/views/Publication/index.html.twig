{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Publications
{% endblock title %}


{% block body %}


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Liste des publications
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                            <tr>
                                <th class="center">Titre</th>
                                <th class="center">Objet</th>
                                <th class="center">Date</th>
                                <th class="center">Description</th>

                            </tr>
                            </thead>
                            <tbody>
                            {% for o in publications %}
                                <tr class="odd gradeX">
                                    <td class="center"> {{ o.pubTitre }} </td>
                                    <td class="center"> {{ o.pubObjet }} </td>
                                    <td class="center"> Le {{ o.pubDate |date('d-m-Y')}}  </td>
                                    <td class="center"> {{ o.pubDescription }} </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->


{% endblock body %}