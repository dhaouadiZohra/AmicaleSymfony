{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Forum Amical Esprit
{% endblock title %}
{% block body %}

    <div id="sitetitle">
    <h1><a href="#"  ></a></h1>
    <h1><a2><forum</a2></h1>
    <div id="content">
        <div id="left">

        </div>
    {% for i in publications[:1] %}
        <button class="style1" type="submit"  ><a href="{{ path('Ajout_Publication_Admin',{'id':i.PUB_SEC_ID}) }}"><i class="fa fa-reply lazyIcon "></i> Répondre</a></button>
    {% endfor %}


    <div id="right">
        </div>
    {% for i in publications %}
    <div class="panel">
        <div class="panel-heading">
            <div class="text-center">
                <div class="row">
                    <div class="col-sm-9">
                        <h3 class="pull-left">Titre: {{ i.PUB_TITRE}}</h3>
                    </div>
                    <div class="col-sm-9">
                        <h4 class="pull-left">Objet: {{ i.PUB_OBJET }}</h4>
                    </div>
                    <div class="col-sm-3">
                        <h4 class="pull-right">
                            <small><em>{{i.PUB_DATE|date('d-m-Y')}}<br>Par: {{ app.user.username }}</em></small>
                        </h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="panel-body">
            {{ i.PUB_DESCRIPTION }}
        </div>




        <div class="panel-footer">
         <a  href="{{ path('delete_publication',{'id':i.PUB_ID,'ids':i.PUB_SEC_ID}) }}" onclick="return confirm('Êtes-vous sûr de supprimer cette publication ?')"><li class ="fa fa-trash fa-fw"></li>Supprimer</a> | <a href="{{ path('update_publication',{'id':i.PUB_ID}) }}"><li class ="fa fa-pencil-square-o fa-fw"></li>Modifier</a>
        </div>

        {% endfor %}
        <div class="text-center">
            {{ knp_pagination_render(publications) }}
        </div>

        <script src="{{ asset('assets/js/jquery-1.10.2') }}"></script>
        <!-- BOOTSTRAP SCRIPTS -->

        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        <!-- METISMENU SCRIPTS -->

        <script src="{{ asset('assets/js/jquery.metisMenu.js') }}"></script>

        <!-- CUSTOM SCRIPTS -->

        <script src="{{ asset('assets/js/custom.js') }}"></script>
    </div>




    <!-- /.row -->

{% endblock body %}