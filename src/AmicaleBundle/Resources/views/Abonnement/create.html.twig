{% extends "AmicaleBundle::layoutAdmin.html.twig" %}

{% block title %}
    Abonnement
{% endblock title %}


{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Ajouter abonnements
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            {{form_start(form)}}
                            <form role="form">

                                <div class="form-group">
                                    <label>Titre</label>
                                    {{ form_widget(
form.titre, 
{ 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Agence</label>
                                    {{ form_widget(form.Agence, { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Lieu</label>
                                    {{ form_widget(form.Lieux, { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Prix</label>
                                    {{ form_widget(form.Prix, { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Description</label>
                                    {{ form_widget(form.abnDescription , { 'attr': {'class': "form-control",
                                        'rows':"3"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Nombre de places</label>
                                    {{ form_widget(form.abnNbrPlaces , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>
                                <div class="form-group">
                                    <label>Type</label>
                                    {{ form_widget(form.type , { 'attr': {'class': "form-control",
                                        'placeholder': "Enter text"} }) }}
                                </div>

                                <div class="form-group">
                                    <label>Date d√©but</label>
                                    {{ form_widget(form.DateDeb) }}
                                </div>

                                <div class="form-group">
                                    <label>Date fin</label>
                                    {{ form_widget(form.DateFin) }}
                                </div>

                                {{ form_widget(form.submit, {'attr':{'class':"btn btn-default" }} )}}
                                <button type="reset" class="btn btn-default">Annuler</button>
                                {{form_end(form)}}


                            </form>

                        </div>
                        <!-- /.col-lg-6 (nested) -->

                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

{% endblock body %}